# Configuration du serveur
PORT=3001
NODE_ENV=production

# Secret pour JWT (générer une clé aléatoire en production)
JWT_SECRET=votre_secret_jwt_super_securise_a_changer

# Durée de validité du token (en heures)
JWT_EXPIRES_IN=24

# Chemin vers la base de données SQLite
DATABASE_PATH=./data/database.sqlite

# URL du frontend (pour CORS)
FRONTEND_URL=https://gestion.dents-studio.com

# Configuration Cloudflare (optionnel, pour référence)
CLOUDFLARE_TUNNEL_NAME=gestion-projet
